<%- include('includes/header') %>

<div class="container">
    <% if(locals.errors) { 
        <% errors.forEach(function(error){
            <div class="alert alert-danger"><%= error.msg %></div>
       <% }) %>
    <% } %>


    <form method="post" action="/users/register" class="form-signin">
    <div class="text-center"><h1 class="h3 mb-3 font-weight-normal">Register</h1></div>
    <label for="username" class="sr-only">Username</label>
    <input type="text" id="username" class="form-control" required autofocus>
    <label for="email" class="sr-only">Email</label>
    <input type="email" id="email" class="form-control" required autofocus>
    <label for="password" class="sr-only">Password</label>
    <input type="password" id="password" class="form-control" required>
    <label for="confirmpassword" class="sr-only">Confirm Password</label>
    <input type="confirmpassword" id="confirmassword" class="form-control" required>
    <p>Have Account? <a href="/users/login">Login</a></p>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
    <p class="mt-5 mb-3 text-muted">&copy; 2020-2021</p>
    
    </form>
</div>


<%- include('includes/footer') %>
